<p id="notice"><%= notice %></p>

<h1>Movies</h1>
<h1>Directors</h1>

<%= search_form_for @q do |f| %>
    <%= f.label :title_cont %>
    <%= f.search_field :title_cont %>
 <%= f.submit %>
 <% end %>
<% if @movies.present? %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Trailer url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title.truncate(15) %></td>
          <td><%= movie.description.truncate(15) %></td>
          <td><%= movie.trailer_url.truncate(15) %></td>
          <td><%= link_to 'Show', movie %></td>
          <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
          <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% else %>
    <tr>
      <p> No Movies found! </p>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', welcome_index_path %> <br> <br>

<%= link_to 'New Movie', new_movie_path %><br><br>
<%= paginate @movies %>
