<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<p>
  <strong>Trailer url:</strong>
  <%= @movie.trailer_url %>
</p>

<strong>Actors:</strong>
<% @movie.actors.each do |actor| %>
  <p><%= link_to actor.first_name, actor_path(actor.id) %></p>

<% end %>

<strong>Directors:</strong>
<% @movie.directors.each do |director| %>
  <p><%= link_to director.first_name, director_path(director.id) %></p>
<% end %>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
